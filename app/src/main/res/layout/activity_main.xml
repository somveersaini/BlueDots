<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#2179ff"
    android:fitsSystemWindows="true"
    android:gravity="center_vertical"
    android:layout_centerVertical="true"
    tools:context="com.iblue.bluedots.MainActivity">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView android:src="@drawable/icon"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="65dp"
        android:id="@+id/ic"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blue Dots"
        android:id="@+id/app_name"
        android:layout_below="@+id/ic"
        android:textColor="#0000ff"
        android:textStyle="italic"
        android:textSize="40sp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:typeface="serif" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Puzzle"
        android:textSize="15sp"
        android:typeface="serif"
        android:id="@+id/puzz"
        android:layout_below="@+id/app_name"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp"/>




    <Button
        android:id="@+id/play_button"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:typeface="serif"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="PLAY"
        android:textColor="#fff"
        android:layout_marginBottom="2dp"
        android:background="@drawable/bluelable"

        android:onClick="buttonHandler"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/puzz"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/settings"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:background="@drawable/bluelable"
        android:typeface="serif"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginBottom="2dp"
        android:onClick="buttonHandler"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/play_button"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/how_button"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="HOW TO"
        android:background="@drawable/bluelable"
        android:typeface="serif"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="20sp"

        android:onClick="buttonHandler"
        android:layout_marginBottom="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/settings"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/about_button"
        android:layout_width="170dp"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="ABOUT"
        android:typeface="serif"
        android:textStyle="bold"
        android:background="@drawable/bluelable"
        android:onClick="buttonHandler"
        android:layout_marginBottom="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/how_button"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_button"
        android:textSize="15sp"
        android:typeface="serif"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_gravity="end"
        android:text="@string/copyright"
        android:layout_margin="25dp"
        />

</RelativeLayout>
